# Somnia Network Configuration
SOMNIA_RPC_URL=https://rpc-testnet.somnia.network
PRIVATE_KEY=your_private_key_here

# Block Explorer Configuration
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Security Configuration
ENABLE_CIRCUIT_BREAKER=true
MAX_DAILY_VOLUME=1000000
EMERGENCY_PAUSE_ROLE=0x...

# Interest Rate Configuration
BASE_INTEREST_RATE=500 # 5% in basis points
MAX_INTEREST_RATE=2000 # 20% in basis points
BLOCKS_PER_YEAR=15768000 # Approximate blocks per year on Somnia

# Oracle Configuration
ORACLE_UPDATE_FREQUENCY=100 # blocks
MIN_CREDIT_SCORE=300
MAX_CREDIT_SCORE=850

# Liquidation Configuration
LIQUIDATION_THRESHOLD=8000 # 80% in basis points
LIQUIDATION_BONUS=500 # 5% in basis points

# Development Configuration
REPORT_GAS=true
CONTRACT_SIZE_LIMIT=24576

# Frontend Configuration (add these to frontend/.env.local)
# NEXT_PUBLIC_CONTRACT_ADDRESSES=see_deployment_logs
# NEXT_PUBLIC_SOMNIA_RPC_URL=https://rpc-testnet.somnia.network