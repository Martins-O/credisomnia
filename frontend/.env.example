# Environment Configuration for Credisomnia Frontend

# WalletConnect Project ID (Get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_wallet_connect_project_id_here"

# Contract Addresses (Fill these after deployment)
NEXT_PUBLIC_CREDIT_ORACLE_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_CREDIT_NFT_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_LENDING_POOL_ADDRESS="0x0000000000000000000000000000000000000000"
NEXT_PUBLIC_SAVINGS_VAULT_ADDRESS="0x0000000000000000000000000000000000000000"

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=50312
NEXT_PUBLIC_RPC_URL="https://rpc-testnet.somnia.network"
NEXT_PUBLIC_EXPLORER_URL="https://explorer-testnet.somnia.network"

# App Configuration
NEXT_PUBLIC_APP_NAME="Credisomnia"
NEXT_PUBLIC_APP_DESCRIPTION="DeFi Credit Scoring & Lending Platform"
NEXT_PUBLIC_APP_URL="https://credisomnia.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_MIXPANEL_TOKEN=""

# Support URLs
NEXT_PUBLIC_DOCS_URL="https://docs.credisomnia.com"
NEXT_PUBLIC_DISCORD_URL="https://discord.gg/credisomnia"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/credisomnia"
NEXT_PUBLIC_GITHUB_URL="https://github.com/credisomnia"